package Nuevo;

class Consumidor extends Thread {
    private final BufferEventos buffer;
    private final int cantidadEventos;

    public Consumidor(BufferEventos buffer, int cantidadEventos) {
        this.buffer = buffer;
        this.cantidadEventos = cantidadEventos;
    }

    @Override
    public void run() {
        try {
            for (int i = 0; i < cantidadEventos; i++) {
                buffer.consumir();
                Thread.sleep(500); // Simula análisis en el laboratorio, le pongo tambien en sleep más tiempo
            }
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }
}
